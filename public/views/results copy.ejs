	</script>
</head>
<body ng-app="resultsApp" ng-controller='ResultsController'>
<div class="container">

	<!-- HEADER -->
	<nav class="navbar navbar-inverse">
		<div class="navbar-header">
		</div>
		<div>
			<h2>LOGO</h2>
			<div class="row">

			<form action='search' method='get'>
				<input type='text' placeholder="Search"/>
				<input type='submit' value='Search'/>
			</form>
		</div>
		</div>

        <div>
            <h4>Showing results for <%= itemToSearch %></h4>
            <div class='row'>
							<div class='col s12'>
								<ul class='tabs'>
									<li class='tab col s3'><a class='active'>Tracks</a></li>
									<li class='tab col s3'><a >Artists</a></li>
									<li class='tab col s3'><a >Albums</a></li>
								</ul>
							</div>
							<div id='tracksContainer' class='col s12'>

							</div>
							<div id='artistsContainer' class='col s12'>Artists only</div>
							<div id='albumsContainer' class='col s12'>Albums only</div>
						</div>

						<!--Each item-->
						<ul class='resultList' ng-repeat="item in items">
							<li>
							<div class='itemContainer'>
								<div class='albumArtContainer'>
									<img class='albumArt' src='http://albumartcollection.com/wp-content/uploads/2011/07/summer-album-art.jpg' alt="art" />
								</div>
								<div class='detailSection'>
									<div>{{item.title}}</div>
									<div>{{item.artist}}</div>
									<span>{{item.album}}</span>
									<span>{{item.duration}}</span>
								</div>
							</li>
							</ul>

						</div>

        </div>

	</nav>

	<!-- ANGULAR DYNAMIC CONTENT -->
	<div ng-view></div>

</div>
</body>
</html>

